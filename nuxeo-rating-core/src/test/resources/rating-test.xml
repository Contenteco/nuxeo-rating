<component name="org.nuxeo.ecm.rating.test">

  <extension target="org.nuxeo.runtime.datasource" point="datasources">
    <datasource name="jdbc/nxactivities" driverClassName="org.nuxeo.runtime.datasource.h2.JdbcDataSource"
      maxActive="20" maxIdle="5">
      <property name="url">jdbc:h2:${ds.nxactivities.home}/db;MVCC=true</property>
    </datasource>
  </extension>

  <extension target="org.nuxeo.ecm.core.persistence.PersistenceComponent" point="hibernate">
    <hibernateConfiguration name="nxactivities">
      <datasource>nxactivities</datasource>
      <properties>
       <property name="hibernate.hbm2ddl.auto">update</property>
      </properties>
    </hibernateConfiguration>
  </extension>

</component>
